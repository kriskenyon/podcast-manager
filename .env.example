# Podcast Manager Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_NAME=Podcast Manager
APP_VERSION=0.1.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# For SQLite (default):
DATABASE_URL=sqlite+aiosqlite:///./podcast_manager.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/podcast_manager
# For MySQL:
# DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/podcast_manager

# Download Settings
DOWNLOAD_BASE_PATH=/mnt/media/podcasts
MAX_CONCURRENT_DOWNLOADS=3
DEFAULT_MAX_EPISODES=3
DOWNLOAD_TIMEOUT=3600

# Feed Refresh Settings
FEED_REFRESH_INTERVAL=3600
FEED_REQUEST_TIMEOUT=30

# Apple Podcast API Settings
APPLE_PODCAST_API_BASE=https://itunes.apple.com/search
APPLE_PODCAST_SEARCH_LIMIT=20

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FILE=./logs/podcast_manager.log

# Background Tasks
AUTO_CLEANUP_ENABLED=true
CLEANUP_INTERVAL=86400

# Security (change in production!)
SECRET_KEY=change-me-in-production-use-a-long-random-string

# Plex Integration (optional)
# Enable smart cleanup based on Plex play status
# Episodes will only be deleted if they've been played in Plex
PLEX_ENABLED=false
PLEX_URL=http://localhost:32400
PLEX_TOKEN=
PLEX_LIBRARY=Podcasts

# How to get your Plex token:
# 1. Log into Plex Web App
# 2. Play any media and click "..." â†’ "Get Info"
# 3. Click "View XML"
# 4. Copy the X-Plex-Token from the URL
